{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "NodeNext",                               
    "strict": true,                                     
    "esModuleInterop": true,                             
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",                                
    "forceConsistentCasingInFileNames": true,            
    "rootDir": "./src",                                 
    "outDir": "./dist"                                  
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
